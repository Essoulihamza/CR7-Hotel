      suitTypesContainer.classList.toggle('hidden');
  });
  for(let i = 0; i < suitTypes.length; i++) {
      suitTypes[i].addEventListener('click', (e) => {
        selectedSuitView.innerHTML = e.target.innerText;
        selectedSuitValue.value = selectedSuitView.innerHTML;
      });
  }
